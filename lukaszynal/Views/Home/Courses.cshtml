@{
    ViewData["Title"] = "Courses";
}
@model lukaszynal.Models.ViewModels.CoursesViewModel

<nav>
    <div class="nav nav-tabs mb-3 justify-content-center" id="nav-tab" role="tablist">
        <button class="nav-link" id="nav-programming-tab" data-bs-toggle="tab" data-bs-target="#nav-programming" type="button" role="tab" aria-controls="nav-programming" aria-selected="true">Programming</button>
        <button class="nav-link" id="nav-data-tab" data-bs-toggle="tab" data-bs-target="#nav-data" type="button" role="tab" aria-controls="nav-data" aria-selected="false">Data Analytics</button>
        <button class="nav-link" id="nav-other-tab" data-bs-toggle="tab" data-bs-target="#nav-other" type="button" role="tab" aria-controls="nav-other" aria-selected="false">Other</button>
    </div>
</nav>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-programming" role="tabpanel" aria-labelledby="nav-programming-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.ProgrammingCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
    <div class="tab-pane fade" id="nav-data" role="tabpanel" aria-labelledby="nav-data-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.DataCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
    <div class="tab-pane fade" id="nav-other" role="tabpanel" aria-labelledby="nav-other-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.OtherCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
</div>