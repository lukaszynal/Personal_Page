@{
    ViewData["Title"] = "Courses";
}
@model lukaszynal.Models.ViewModels.CoursesViewModel

<nav>
    <div class="nav nav-tabs mb-3 justify-content-center" id="nav-tab" role="tablist">
        <button class="nav-link" id="nav-cpp-tab" data-bs-toggle="tab" data-bs-target="#nav-cpp" type="button" role="tab" aria-controls="nav-cpp" aria-selected="false">C++</button>
        <button class="nav-link" id="nav-python-tab" data-bs-toggle="tab" data-bs-target="#nav-python" type="button" role="tab" aria-controls="nav-python" aria-selected="false">Python</button>
        <button class="nav-link active" id="nav-dotNet-tab" data-bs-toggle="tab" data-bs-target="#nav-dotNet" type="button" role="tab" aria-controls="nav-dotNet" aria-selected="true">.Net</button>
        <button class="nav-link" id="nav-web-tab" data-bs-toggle="tab" data-bs-target="#nav-web" type="button" role="tab" aria-controls="nav-web" aria-selected="false">Web Development</button>
        <button class="nav-link" id="nav-other-tab" data-bs-toggle="tab" data-bs-target="#nav-other" type="button" role="tab" aria-controls="nav-other" aria-selected="false">Other</button>
    </div>
</nav>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade" id="nav-cpp" role="tabpanel" aria-labelledby="nav-cpp-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.CppCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
    <div class="tab-pane fade" id="nav-python" role="tabpanel" aria-labelledby="nav-python-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.PythonCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
    <div class="tab-pane fade show active" id="nav-dotNet" role="tabpanel" aria-labelledby="nav-dotNet-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.DotNetCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
    <div class="tab-pane fade" id="nav-web" role="tabpanel" aria-labelledby="nav-web-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.WebCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
    <div class="tab-pane fade" id="nav-other" role="tabpanel" aria-labelledby="nav-other-tab">
        <div class="card-columns row row-cols-1 row-cols-sm-2">
        @foreach (var course in Model.OtherCourses)
        {
            <partial name="Course_partial" model="course" />
        }
        </div>
    </div>
</div>